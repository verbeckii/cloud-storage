{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@cloud-storage/backend/common/decorators": [
        "libs/backend/common/decorators/src/index.ts"
      ],
      "@cloud-storage/backend/common/prisma-client": [
        "libs/backend/common/prisma-client/src/index.ts"
      ],
      "@cloud-storage/backend/common/swagger-types": [
        "libs/backend/common/swagger-types/src/index.ts"
      ],
      "@cloud-storage/backend/common/types": [
        "libs/backend/common/types/src/index.ts"
      ],
      "@cloud-storage/backend/queries": ["libs/backend/queries/src/index.ts"],
      "@cloud-storage/backend/services": ["libs/backend/services/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
